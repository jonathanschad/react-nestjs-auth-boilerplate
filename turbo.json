{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "lint:fix": {
            "dependsOn": ["^lint:fix"]
        },
        "format:verify": {
            "dependsOn": ["^format:verify"]
        },
        "format": {
            "dependsOn": ["^format"]
        },
        "tsc": {
            "dependsOn": ["^tsc"],
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
