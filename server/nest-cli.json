{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "tsConfigPath": "tsconfig.build.json",
        "assets": [
            "src/**/*.html",
            "src/**/*.json",
            "src/**/*.png",
            "src/**/*.jpg",
            "src/**/*.jpeg",
            "src/**/*.svg",
            "src/**/*.md"
        ],
        "watchAssets": true
    }
}
