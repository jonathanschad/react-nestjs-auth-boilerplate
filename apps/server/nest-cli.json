{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "assets/**/*",
                "outDir": "dist"
            },
            {
                "include": "**/*.json",
                "outDir": "dist"
            },
            {
                "include": "**/*.html",
                "outDir": "dist"
            },
            {
                "include": "**/*.png",
                "outDir": "dist"
            },
            {
                "include": "**/*.jpg",
                "outDir": "dist"
            },
            {
                "include": "**/*.jpeg",
                "outDir": "dist"
            },
            {
                "include": "**/*.svg",
                "outDir": "dist"
            },
            {
                "include": "**/*.md",
                "outDir": "dist"
            }
        ],
        "watchAssets": true
    }
}
